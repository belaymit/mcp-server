# MCP Proxy Server Environment Variables
# Copy this file to .env and fill in your actual values

# LLM Configuration
OPENAI_API_KEY=your_openai_api_key_here
ANTHROPIC_API_KEY=your_anthropic_api_key_here
GEMINI_API_KEY=your_gemini_api_key_here

# Custom LLM endpoint (optional)
LLM_PROVIDER=openai
LLM_BASE_URL=https://api.openai.com/v1
LLM_MODEL=gpt-4

# Downstream MCP Server URLs (for production)
GITHUB_MCP_URL=http://github-mcp-server:8001
FILESYSTEM_MCP_URL=http://filesystem-mcp-server:8002
GDRIVE_MCP_URL=http://gdrive-mcp-server:8003
ATLASSIAN_MCP_URL=http://atlassian-mcp-server:8004

# Proxy Server Configuration
PROXY_PORT=8000
PROXY_HOST=0.0.0.0

# Web UI Configuration
UI_ENABLED=true
UI_PORT=3000
UI_THEME=light

# Logging Configuration
LOG_LEVEL=INFO
LOG_FILE=/var/log/mcp-proxy/proxy.log

# Google Drive API (if using real GDrive MCP server)
GOOGLE_CLIENT_ID=your_google_client_id
GOOGLE_CLIENT_SECRET=your_google_client_secret
GOOGLE_REFRESH_TOKEN=your_google_refresh_token

# Atlassian API (if using real Atlassian MCP server)
ATLASSIAN_API_TOKEN=your_atlassian_api_token
ATLASSIAN_EMAIL=your_atlassian_email
ATLASSIAN_DOMAIN=your_company.atlassian.net

# GitHub API (if using real GitHub MCP server)
GITHUB_TOKEN=your_github_personal_access_token